<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/a4tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品购买页面"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/a4iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a4tv1"
        />


    <TextView
        android:id="@+id/a4tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买数量:"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a4tv2"
        />

    <TextView
        android:id="@+id/a4tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/a4tv2"
        app:layout_constraintTop_toTopOf="@+id/a4tv2" />

    <TextView
        android:id="@+id/a4tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称:"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a4iv1"
        />

    <EditText
        android:id="@+id/a4et1"
        android:layout_width="441dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/a4tv3"
        app:layout_constraintLeft_toRightOf="@+id/a4tv3" />

    <TextView
        android:id="@+id/a4tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="商品评星:"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a4tv3"
        />

    <RatingBar
        android:id="@+id/a4ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4.0"
        android:stepSize="0.5"
        android:isIndicator="true"
        app:layout_constraintTop_toBottomOf="@+id/a4tv3"
        app:layout_constraintLeft_toRightOf="@id/a4tv5"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/a4bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认购买"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/a4bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>